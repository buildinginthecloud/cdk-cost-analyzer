# Test workflow for cdk-cost-analyzer
name: test
on:
  push:
    branches: [main]
  pull_request: {}
  workflow_dispatch: {}

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v5
      
      - name: Setup Node.js
        uses: actions/setup-node@v5
        with:
          node-version: 20.18.1
      
      - name: Install dependencies
        run: npm ci
      
      - name: Run tests
        run: npm test